<table ...attributes>
  {{yield (hash header=(component 'table-header' sort=this.sort))}}
  {{yield (hash body=(component 'table-body'
  currentPage=this.currentPage
  maxRows=this.args.maxRows))}}
</table>

{{#if this.showPagination}}
  <nav aria-label="Table Navigation">
    <ul class="pagination">
      {{#if this.showPrev}}
        <li class="page-item" {{action this.goPrev}}><a class="page-link" href="#">Previous</a></li>
      {{/if}}
      {{#each this.pageNumbers as |n|}}
        <li class="page-item {{if (eq this.currentPage n) 'active' ''}}" {{action this.setPage n}}><a class="page-link" href="#">{{n}}</a></li>
      {{/each}}
      {{#if this.showNext}}
        <li class="page-item" {{action this.goNext}}><a class="page-link" href="#">Next</a></li>
      {{/if}}
    </ul>
  </nav>
{{/if}}